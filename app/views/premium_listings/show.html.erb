<%# <h1 class="text-center">Premium Article </h1> %>
<div class="container mx-auto mt-6 fullscreen">
  <div class="max-w-lg rounded overflow-hidden mx-auto">
    <% if @premium.approved == true %>
      <%= image_tag @premium.image, class: "image-width" if @premium.image.attached? %>
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2"><h3 class="pt-4"><%= @premium.title %></h3></div>
        <p class="text-grey-darker text-base">
          <%= simple_format(@premium.content) %>
        </p>
      </div>
      <div class="px-6 py-4">
        <span class="inline-block bg-grey-lighter rounded-full px-3 py-1 text-sm font-semibold text-grey-darker mr-2">Author: <%= @premium.author%></span>
        <span class="inline-block bg-purple-lighter rounded-full px-3 py-1 text-sm font-semibold text-grey-darker mr-2">#<%= @premium.category.name%></span>
      </div>    
      <%= link_to "Back to Premium Articles list", premium_listings_path, class: "inline-block mx-auto text-lg max-w-sm block mt-6 mb-6" %>
    <% end %>
  </div>
</div>